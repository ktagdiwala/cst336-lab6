<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/nav.ejs") %>
    <h1>Updating Quote Data</h1>
        <form method="POST" action="/quote/edit" class="input-form">
        <input type="hidden" name="quoteId" value="<%=quoteInfo[0].quoteId%>">
        Quote:
        <textarea name="quote" class="long-text" required="required"><%=quoteInfo[0].quote%></textarea>
        <br>
        Author:
        <select name="author" required="required">
            <option value="<%=quoteInfo[0].authorId%>"></option>
            <% for (author of authors) { %>
                <% if(author.authorId == quoteInfo[0].authorId){%>
                    <option value="<%=author.authorId%>" selected>
                        <%=author.firstName%> <%=author.lastName%>
                    </option>                    
                <%}else{%>
                    <option value="<%=author.authorId%>">
                        <%=author.firstName%> <%=author.lastName%>
                    </option>
                <%}%>
            <% } %>
        </select><br>
        Category:
        <select name="category">
            <% for (quote of quotes) { %>
                <% if(quote.category == quoteInfo[0].category){%>
                    <option value="<%=quote.category%>" selected>
                        <%=quote.category%>
                    </option>
                <%}else{%>
                    <option value="<%=quote.category%>">
                        <%=quote.category%>
                    </option>
                <%}%>
            <% } %>
        </select><br>
        Likes:
        <input type="number" name="likes" value="<%=quoteInfo[0].likes%>">
        <br>

        <button class="btn btn-outline-primary">Update Quote</button>
        </form>

        <%- include("partials/footer.ejs") %>
</body>
</html>
